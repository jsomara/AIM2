<% provide(:title, @project.title) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= @project.title %>
				<%= @project.audience %>
				<%= @project.behavior %>
				<%= @project.step %>
				<%= @project.sme %>
			</h1>
		</section>
	</aside>
	<div class="span8">
		<% if @user.projects.any? %>
			<h3>Projects (<%= @user.projects.count %>)</h3>
			<ol class="projects">
				<%= render @projects %>
			</ol>
			<%= will_paginate @projects %>
		<% end %>
	</div>
</div>